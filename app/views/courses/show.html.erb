<% flash.each do |key, message|%>
<div class='container'>
    <div class='row sign-up-form'>
        <div class='col s12 m12 l12'>
            <div class='card-panel green accent-1' id='fade-out-target'>
                <span class='white-text'>
                    <%= message %>
                </span>
            </div>
        </div>
    </div>
</div>
<% end %>
<main class="container">
    <div class='row sign-up-form'>
        <div class="col s6 m6 l6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">
                        Name: <%= @course.name %>
                    </span>
                    <p>
                        Tools: <%= @course.short_name %>
                    </p>
                    <p>
                        Description: <%= @course.description %>
                    </p>
                </div>
            </div>
            <%# if logged_in? && !current_user.admin? %>
            <% if logged_in? && (current_user == @student || current_user.admin?) %>
            <%= link_to '<i class="material-icons left">create</i>Edit Profile'.html_safe, edit_course_path(@course), class: "waves-effect waves-light btn" %>
            <% end %>
        </div>

        <% if logged_in? && (current_user.courses.include?(@course)) %>
        <%# <div class="row"> %>
        <div class="col s6 m6 l6">
            <div class="card-panel teal">
                <span class="white-text">Thanks for enrolling in this course.
                    Contents of this course will be uploaded very soon. Do well to inform your friends to enroll.
                </span>
            </div>
        </div>
        <%# </div> %>
        <% end %>
    </div>

</main>