<div class='row sign-up-form'>
    <div class="col s6 m6 l6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">
                    Name: <%= @student.name %>
                </span>
                <p>
                    Email: <%= @student.email %>
                </p>
                <p>
                    Course Enrollments: None
                </p>
            </div>
        </div>
        <% if current_user == @student %>
        <%= link_to '<i class="material-icons left">create</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
        <% end %>
    </div>
</div>