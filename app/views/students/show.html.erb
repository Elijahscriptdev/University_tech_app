<% flash.each do |key, message|%>
<div class='container'>
    <div class='row sign-up-form'>
        <div class='col s12 m12 l12'>
            <div class='card-panel green accent-1' id='fade-out-target'>
                <span class='white-text'>
                    <%= message %>
                </span>
            </div>
        </div>
    </div>
</div>
<% end %>
<main class="container">
    <div class='row sign-up-form'>
        <div class="col s6 m6 l6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">
                        Name: <%= @student.name %>
                    </span>
                    <p>
                        Email: <%= @student.email %>
                    </p>
                    <p>
                        Course Enrollments:
                        <% if @student.courses.empty? %>
                        None
                        <% else %>
                        <ul>
                            <% @student.courses.each do |course| %>
                            <li>
                                <%= course.name %>
                            </li>
                            <% end %>
                        </ul>
                        <% end %>
                    </p>
                </div>
            </div>
            <% if logged_in? && (current_user == @student || current_user.admin?) %>
            <%= link_to '<i class="material-icons left">create</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
            <% end %>
        </div>
    </div>
</main>